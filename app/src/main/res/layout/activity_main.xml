<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Judul"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="181dp "
        android:layout_marginTop="39dp"
        android:layout_marginEnd="170dp"
        android:background="#FFFFFF"
        android:text="RumahKu"
        android:textColor="#000000"
        android:textSize="60sp"
        android:textStyle="bold"
        app:barrierMargin="1200px"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btDinding"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Dinding"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btAtap"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Judul" />

    <Button
        android:id="@+id/btAtap"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Atap"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btLantai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btDinding" />

    <Button
        android:id="@+id/btLantai"
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:text="Lantai"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btAtap" />
</androidx.constraintlayout.widget.ConstraintLayout>